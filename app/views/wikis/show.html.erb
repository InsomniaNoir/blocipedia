<h1><%= markdown_to_html @wiki.title %></h1>

<p><%= markdown_to_html @wiki.body %></p>

<% if policy(@wiki).edit? %>
  <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
<% end %>

<% if policy(@wiki).destroy? %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
<% end %>

<h2>Collaborators</h2>
<% @wiki.collaborators.each do |collaborator| %>
<p>
  <%= collaborator.user.name %>
  <%= link_to "Remove Collaborator", wiki_destroy_collaborators_path(@wiki, {collaborator: collaborator.id}), method: :delete %>
</p>
<% end %>
