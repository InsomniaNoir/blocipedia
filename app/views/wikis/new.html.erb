<h1>New Wiki</h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Wiki Title Here" %>
      </div>
      <%= render partial: 'wikis/form', locals: { wiki: Wiki.new } %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: 'Talk about what you want' %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
  <% end %>
  </div>
</div>
